<?xml version="1.0" encoding="UTF-8" ?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <servlet>
			<servlet-name>login</servlet-name>
			<servlet-class>com.doctor.LoginServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>login</servlet-name>
			<url-pattern>/log</url-pattern>
		</servlet-mapping>
		
		
		<servlet>
			<servlet-name>doctorinsert</servlet-name>
			<servlet-class>com.doctor.DoctorInsert</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>doctorinsert</servlet-name>
			<url-pattern>/insert</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>updatedoctor</servlet-name>
			<servlet-class>com.doctor.UpdateDoctorServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>updatedoctor</servlet-name>
			<url-pattern>/update</url-pattern>
		</servlet-mapping>
		
		
		<servlet>
			<servlet-name>deletedoctor</servlet-name>
			<servlet-class>com.doctor.DeleteDoctorServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>deletedoctor</servlet-name>
			<url-pattern>/delete</url-pattern>
		</servlet-mapping>
		
		
		<servlet>
			<servlet-name>search</servlet-name>
			<servlet-class>com.doctor.SearchServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>search</servlet-name>
			<url-pattern>/search</url-pattern>
		</servlet-mapping>
		
		
       
        <servlet>
			<servlet-name>updatepatient</servlet-name>
			<servlet-class>com.doctor.UpdatePatientServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>updatepatient</servlet-name>
			<url-pattern>/pupdate</url-pattern>
		</servlet-mapping>
		
		
		<servlet>
			<servlet-name>deletepatient</servlet-name>
			<servlet-class>com.doctor.DeletePatientServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>deletepatient</servlet-name>
			<url-pattern>/pdelete</url-pattern>
		</servlet-mapping>
		
         
</web-app>         